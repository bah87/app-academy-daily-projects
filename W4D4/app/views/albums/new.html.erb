<h2>Add new album</h2>
<form action="<%= albums_url %>" method="post">
  <%= auth_token %>
  <label>Title
    <input type="text" name="album[title]">
  </label><br><br>
  <label>Year
    <input type="text" name="album[year]">
  </label><br><br>
  <label>Band
    <select name="album[band_id]">
      <option disabled selected>--Select band--</option>
      <% current_user.bands.each do |band| %>
        <option value="<%= band.name %>"><%= band.name.capitalize %></option>
      <% end %>
    </select>
  </label><br><br>
  <label>Live
    <input type="radio" name="album[live_or_studio]" value="live">
  </label>
  <label>Studio
    <input type="radio" name="album[live_or_studio]" value="studio">
  </label>
  <input type="submit" name="name" value="Add album">
</form>